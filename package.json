{
  "name": "slack-app-test",
  "version": "1.0.0",
  "description": "Slack bot backend with OpenAI Assistant API integration",
  "type": "module",
  "main": "dist/index.js",
  "scripts": {
    "build": "tsc",
    "start": "node dist/index.js",
    "dev": "nodemon --exec ts-node --esm src/index.ts",
    "dev:ngrok": "concurrently -k -n API,NGROK -c yellow,cyan \"npm:dev\" \"wait-on http://localhost:3000/health && npx ngrok http 3000 --log=stdout\"",
    "ngrok": "npx ngrok http 3000 --log=stdout",
    "test": "echo \"Error: no test specified\" && exit 1"
  },
  "keywords": [],
  "author": "",
  "license": "ISC",
  "dependencies": {
    "@types/express": "^4.17.23",
    "axios": "^1.10.0",
    "dotenv": "^17.1.0",
    "express": "^4.21.2"
  },
  "devDependencies": {
    "@types/node": "^24.0.11",
    "concurrently": "^9.2.0",
    "ngrok": "^5.0.0-beta.2",
    "nodemon": "^3.1.10",
    "ts-node": "^10.9.2",
    "typescript": "^5.8.3",
    "wait-on": "^8.0.3"
  }
}
