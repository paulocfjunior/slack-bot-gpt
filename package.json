{
  "name": "slack-bot-gpt",
  "version": "1.0.0",
  "description": "Slack bot backend with OpenAI Assistant API integration",
  "type": "module",
  "main": "dist/index.js",
  "scripts": {
    "build": "tsc",
    "start": "node dist/index.js",
    "dev": "nodemon",
    "ngrok": "npx ngrok http 3000 --log=stdout",
    "lint": "eslint src/**/*.ts",
    "lint:fix": "eslint src/**/*.ts --fix",
    "format": "prettier --write src/**/*.ts",
    "format:check": "prettier --check src/**/*.ts",
    "send-message": "curl -X POST -H 'Content-type: application/json' -d '{\"username\": \"$1\", \"message\": \"$2\"}' http://localhost:3000/api/send-message",
    "test": "jest --verbose",
    "test:watch": "jest --verbose --watch",
    "test:coverage": "jest --verbose --coverage",
    "test:ci": "jest --ci --verbose --coverage --watchAll=false",
    "ci:check": "./scripts/check-workflow.sh"
  },
  "keywords": [
    "slack",
    "bot",
    "openai",
    "assistant",
    "gpt"
  ],
  "author": "Paulo Junior",
  "license": "MIT",
  "dependencies": {
    "@types/express": "^5.0.3",
    "axios": "^1.10.0",
    "dotenv": "^17.1.0",
    "express": "^5.1.0"
  },
  "devDependencies": {
    "@trivago/prettier-plugin-sort-imports": "^5.2.2",
    "@types/jest": "^30.0.0",
    "@types/node": "^24.0.12",
    "@typescript-eslint/eslint-plugin": "^8.36.0",
    "@typescript-eslint/parser": "^8.36.0",
    "concurrently": "^9.2.0",
    "eslint": "^9.30.1",
    "eslint-config-prettier": "^10.1.5",
    "eslint-plugin-jest": "^29.0.1",
    "eslint-plugin-prettier": "^5.5.1",
    "jest": "^30.0.4",
    "ngrok": "^5.0.0-beta.2",
    "nodemon": "^3.1.10",
    "prettier": "^3.6.2",
    "ts-jest": "^29.4.0",
    "ts-node": "^10.9.2",
    "typescript": "^5.8.3"
  }
}
